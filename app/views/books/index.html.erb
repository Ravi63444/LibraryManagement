<p id="notice"><%= notice %></p>

<h1>Books</h1>


<table class="table  table-striped table-dark">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Author</th>
      <th scope="col"  colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
        <td><%= book.Author %></td>
        <td><%= link_to 'Show', book, class:"badge badge-info" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class:"badge badge-primary"%></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"badge badge-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Book', new_book_path, class:"btn btn-success"%>
