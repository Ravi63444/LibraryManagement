<div clas='container justify-content-center'>
  <%= form_with(model: book,class:"shadow-sm p-3 mb-1 bg-light  rounded", local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= form.label :name, class:'form-label'%>
      
      <%= form.text_field :name, class:'form-control'%>
      
    </div>

    <div class="form-group row">
      <%= form.label :Author, class:'form-label'%>
      <%= form.text_field :Author, class:'form-control'%>
    </div>

    <div class="form-group row justify-content-center">
      <%= form.submit  class:'btn btn-success'%>
    </div>
  <% end %>
  <%= link_to 'Back to Book listing', books_path, class:"badge badge-secondary" %>
</div>

